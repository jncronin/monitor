all: writemessage monitor io_test

writemessage: writemessage.c string_out.c packet.c
	cc -o writemessage writemessage.c string_out.c packet.c

monitor: monitor.c
	cc -o monitor monitor.c

io_test: io_test.c string_out.c packet.c
	cc -o io_test io_test.c string_out.c packet.c

install: writemessage monitor
	install writemessage /usr/local/bin
	install healthy.sh /usr/local/bin
	install monitor /usr/local/bin

clean:
	rm -f monitor writemessage

